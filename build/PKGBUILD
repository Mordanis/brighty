pkgname=brighty
pkgver=0.3
pkgrel=1
pkgdesc="Brightness Controller For nVidia Laptop"
arch=("x86_64")
url="https://github.com/Mordanis/brighty"
license=("MIT")
makedepends=(cargo git)
source=('https://github.com/Mordanis/brighty/archive/refs/tags/v0.3.1.tar.gz')
sha256sums=('20b694a648b2e8bf0c1335c1621d416e40bc6686ebd40db85f9b1252105f5765')
prepare() {
    cargo fetch --locked --target "$CARCH-unknown-linux-gnu"
}
build() {
    export RUSTUP_TOOLCHAIN=nightly
    export CARGO_TARGET_DIR=target
    cargo build --frozen --release --all
}
package() {
    find target/release \
        -maxdepth 1 \
        -executable \
        -type f \
        -exec install -Dm0755 -t "$pkgdir/usr/bin/" {} +
    ls -halt $pkgname-$pkgver.$pkgrel/build
    install -Dm0644 -t "$pkgdir/usr/lib/systemd/system/brighty.service" $pkgname-$pkgver.$pkgrel/build/brighty.service
    install -Dm0644 -t "$pkgdir/usr/lib/systemd/system/brighty.socket" $pkgname-$pkgver.$pkgrel/build/brighty.socket
}
